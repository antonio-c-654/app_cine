<%- include('partials/header') %>
<%- include('partials/nav_bar_logout') %>

<div class="bg-green-200 w-screen h-[90vh] flex flex-col items-center justify-center gap-4">

    <h1 class="text-2xl">Lista de usuarios</h1>
    
    <% for (let i = 0; i < usuarios.length; i++) { %>
        <div class="border p-2 bg-white">
            <ul class="flex flex-row gap-4">
                <li>email: <%= usuarios[i].email %></li>
                <li>esAdmin: <%= usuarios[i].esAdmin %></li>
                <li>visitas: <%= usuarios[i].visitas %></li>
                <form action="/deleteUser" method="post">
                    <button type="submit" name="email_borrar" value="<%= usuarios[i].email %>"><i class="fa-solid fa-trash-can"></i></button>
                </form>
            </ul>
        </div>        
    <% } %>

</div>

<%- include('partials/footer') %>